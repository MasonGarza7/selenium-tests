<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <timestamp key="RUN_TIMESTAMP" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <property name="LOG_DIR" value="results/logs"/>
    <property name="LOG_FILE" value="${LOG_DIR}/test-run-${RUN_TIMESTAMP}.log"/>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
